<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



        <ScrollView
            android:id="@+id/scrollView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <RelativeLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:text="Node Information">


                <TextView
                    android:id="@+id/text0_in_main"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="24sp"
                    android:textStyle="bold|italic"
                    tools:style="@android:style/Widget.Material.Light.TextView.SpinnerItem" />

                <LinearLayout
                    android:id="@+id/layout1_in_main"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/text0_in_main">

                    <Button
                        android:id="@+id/btn1_in_main"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:autoText="false"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:text="个人信息"
                        android:textSize="12sp"
                        android:textStyle="bold|italic"
                        tools:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtview1_in_main"
                        android:layout_width="260dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/btn1_in_main"
                        android:gravity="center"
                        android:text="查看个人信息"
                        android:textColor="@android:color/background_dark"
                        android:textStyle="bold|italic" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout2_in_main"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@+id/layout1_in_main"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn2_in_main"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="节点信息"
                        android:textSize="12sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/txtview2_in_main"
                        android:layout_width="260dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/txtview1_in_main"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="查看节点信息"
                        android:textColor="@android:color/background_dark"
                        android:textStyle="bold|italic"
                        android:singleLine="false"/>


                </LinearLayout>





                <TextView
                    android:id="@+id/text01_in_main"
                    android:layout_below="@+id/layout2_in_main"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="区块信息"
                    android:gravity="center"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="24sp"
                    android:textStyle="bold|italic"
                    tools:style="@android:style/Widget.Material.Light.TextView.SpinnerItem"
                    />


                <LinearLayout
