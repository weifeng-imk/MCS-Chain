                    <Button
                        android:id="@+id/btn9_in_main"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="生成反馈"
                        android:textSize="12sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/txtview9_in_main"
                        android:layout_width="260dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="对任务参与者进行反馈"
                        android:textColor="@android:color/background_dark"
                        android:textStyle="bold|italic"
                        android:singleLine="false"/>


                </LinearLayout>

                <TextView
                    android:id="@+id/text03_in_main"
                    android:layout_below="@+id/layout9_in_main"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="测试功能"
                    android:gravity="center"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="24sp"
                    android:textStyle="bold|italic"
                    tools:style="@android:style/Widget.Material.Light.TextView.SpinnerItem"
                    />
                <LinearLayout
                    android:id="@+id/layout10_in_main"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@+id/text03_in_main"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn101_in_main"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="65dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="正确消息"
                        android:textSize="12sp"
                        android:textStyle="bold|italic" />

                    <Button
                        android:id="@+id/btn102_in_main"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="65dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="错误信息"
                        android:textStyle="bold|italic" />




                </LinearLayout>


