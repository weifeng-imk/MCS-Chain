                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout8_in_main"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@+id/layout7_in_main"
                    android:orientation="horizontal">

